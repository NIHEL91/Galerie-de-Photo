{% extends 'base.html.twig' %}

{% block body %}
<div class="album py-5 ">
<div class="container">
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
{% for photo in photos %}
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" 
            src=" {{ vich_uploader_asset(photo,'imageFile') }}" alt="img defaut" 
            preserveAspectRatio="xMidYMid slice" focusable="false">

            <div class="card-body">
              <p class="card-text"><a href="{{ path('photo.show', {id: photo.id}) }}">{{ photo.title }}</a></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">{{ photo.user.pseudo }}</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">{{ photo.postAt }}</button>
                </div>
                <small class="text-muted">commentaires : {{ photo.comments|length }}</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        </div>
</div>
</div>
{% endblock %}
